CREATE TABLE aluno (
                        nome varchar(100) NOT NULL,
                        cpf varchar(11) NOT NULL,
                        tipo_usuario int(5),
                        email varchar(100),
                        senha varchar(10)
                        )
CREATE TABLE tipo_usuario (
    idtipo_usuario INT AUTO_INCREMENT PRIMARY KEY,
    descricao VARCHAR(50) NOT NULL
);

